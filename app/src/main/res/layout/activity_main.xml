<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 输入文本框 -->
    <EditText
        android:id="@+id/editText_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text here..."
        android:layout_margin="16dp"/>

    <!-- 语音输入按钮 -->
    <Button
        android:id="@+id/button_voice_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Input"
        android:layout_below="@id/editText_input"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- 图像输入按钮 -->
    <Button
        android:id="@+id/button_image_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Input"
        android:layout_below="@id/button_voice_input"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- 翻译结果文本框 -->
    <TextView
        android:id="@+id/textView_translation_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Translation will appear here..."
        android:layout_below="@id/button_image_input"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- 语音输出按钮 -->
    <Button
        android:id="@+id/button_voice_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak Translation"
        android:layout_below="@id/textView_translation_result"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

</RelativeLayout>
